<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/original_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".MainActivity"
    tools:ignore="NamespaceTypo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GDG"
        android:textColor="#ffffff"
        android:textSize="64dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="GDG IIIT Lucknow App"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="520dp"
        android:background="@drawable/sub_transparent_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Create Account!"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get started with us!"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="italic" />

        <EditText
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit"
            android:drawableStart="@drawable/outline_mail_24"
            android:drawablePadding="10dp"
            android:hint="Full Name"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#000000" />

        <EditText
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit"
            android:drawableStart="@drawable/outline_password_24"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#000000" />

        <EditText
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit"
            android:drawableStart="@drawable/outline_password_24"

            android:drawablePadding="10dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#000000" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/orange_gradient_floating_button">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/updateprofile"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:text="Update Profile"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="1dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="-------or-------"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/face"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/tweet"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:text="Already have an Account"
                android:textColor="#CCCCCC"
                android:textStyle="bold" />

            <Button
                android:id="@+id/moveToLogin"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="11sp"
                android:backgroundTint="@color/white"
                android:text="Sign-in"
                android:textAlignment="center"
                android:textColor="#622CFD"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
